//数据结构作业-多项式

//3
//2 3
//3 4
//5 7
//5
//2 1
//3 3
//-3 4
//4 6
//5 7


#include <iostream>
#include <cmath>
using namespace std;

struct polynode
{
    float coef;
    int expn;
    polynode *next;
};

void poly_create(polynode *&L)//创建链表
{
    int n, coef, expn;
    cin >> n;
    polynode *head = new polynode;
    polynode *preNode = head;
    head->coef = 0;
    head->expn = 0;
    head->next = NULL;
    while(n--)
    {
        cin >> coef >> expn;
        polynode *myPolynode = new polynode;
        myPolynode->coef = coef;
        myPolynode->expn = expn;
        myPolynode->next = NULL;
        preNode->next = myPolynode;
        preNode = myPolynode;
    }
    L = head;
}

void MyCreate(polynode *& Le, float coef, int expn,polynode *next)
{
    Le = new polynode;
    Le->coef = coef;
    Le->expn = expn;
    Le->next = next;
}

void poly_display(polynode *L)//显示链表内容
{
    char c = '+';
    polynode *head = L->next;
    while(L->next != NULL)
    {
        L = L->next;
        if(L != head)
        {
            c = L->coef > 0 ? '+' : '-';
            cout << c;
            cout << abs(L->coef);
        }
        else
        {
            cout << L->coef;
        }
        cout << "x" << "(" << L->expn << ")";
    }
    cout << endl;
}

void poly_add(polynode *La, polynode *Lb, polynode *&Lc)//相加
{

    Lc = new polynode;
    Lc->coef = 0;
    Lc->expn = 0;
    Lc->next = NULL;
    polynode *head = Lc;
    La = La->next;
    Lb = Lb->next;
    while(La != NULL || Lb != NULL)
    {
        if(La->expn == Lb->expn)
        {
            if(La->coef + Lb->coef ==0)
            {
                La = La->next;
                Lb = Lb->next;
                continue;
            }
            MyCreate(Lc->next, La->coef + Lb->coef, La->expn, NULL);
            Lc = Lc->next;
            La = La->next;
            Lb = Lb->next;
        }
        else if(La->expn < Lb->expn)
        {
            MyCreate(Lc->next, La->coef, La->expn, NULL);
            Lc = Lc->next;
            La = La->next;
        }
        else
        {
            MyCreate(Lc->next, Lb->coef, Lb->expn, NULL);
            Lc = Lc->next;
            Lb = Lb->next;
        }
    }
    while(La != NULL)
    {
        MyCreate(Lc->next, La->coef, La->expn, NULL);
        Lc = Lc->next;
        La = La->next;
    }
    while(Lb != NULL)
    {
        MyCreate(Lc->next, Lb->coef, Lb->expn, NULL);
        Lc = Lc->next;
        Lb = Lb->next;
    }
    Lc = head;
}

void poly_subtract(polynode *La, polynode *Lb, polynode *&Ld)//相减
{

    Ld = new polynode;
    Ld->coef = 0;
    Ld->expn = 0;
    Ld->next = NULL;
    polynode *head = Ld;
    La = La->next;
    Lb = Lb->next;
    while(La != NULL || Lb != NULL)
    {
        if(La->expn < Lb->expn)
        {
            MyCreate(Ld->next, La->coef, La->expn, NULL);
            Ld = Ld->next;
            La = La->next;
        }
        else if(La->expn == Lb->expn)
        {
            if(La->coef == Lb->coef)
            {
                La = La->next;
                Lb = Lb->next;
                continue;
            }
            MyCreate(Ld->next, La->coef - Lb->coef, La->expn, NULL);
            Ld = Ld->next;
            La = La->next;
            Lb = Lb->next;
        }
        else
        {
            MyCreate(Ld->next, -Lb->coef, Lb->expn, NULL);
            Ld = Ld->next;
            Lb = Lb->next;
        }

    }
    while(La != NULL)
    {
        MyCreate(Ld->next, La->coef, La->expn, NULL);
        Ld = Ld->next;
        La = La->next;
    }
    while(Lb != NULL)
    {
        MyCreate(Ld->next, -Lb->coef, Lb->expn, NULL);
        Ld = Ld->next;
        Lb = Lb->next;
    }
    Ld = head;
}

int main()
{
    polynode *La, *Lb, *Lc, *Ld;

    poly_create(La);//创建La
    poly_display(La);

    poly_create(Lb);//创建Lb
    poly_display(Lb);

    poly_add(La, Lb, Lc);//La + Lb = Lc
    poly_display(Lc);

    poly_subtract(La, Lb, Ld);//La - Lb = Ld
    poly_display(Ld);

    return 0;
}
